{
	"name": "@lawlzer/helpers",
	"version": "3.0.3",
	"description": "The default Helpers file for any of Lawlzer's coding projects. ",
	"license": "ISC",
	"author": "Lawlzer",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"src",
		"dist"
	],
	"scripts": {
		"start": "ts-node-dev --respawn --watch * --ignore-watch node_modules --transpile-only -r tsconfig-paths/register src/index.ts",
		"build": "rimraf ./dist && npm run build:types && npm run build:js",
		"build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --ignore \"**/*.test.ts\" --source-maps true",
		"build:types": "tsc -p tsconfig-build.json",
		"publish": "npm run build && npm publish --access public && echo \"Successfully published to NPM!\"",
		"lint": "npm run lint:eslint && npm run lint:prettier",
		"lint:eslint": "eslint . --cache --fix --cache-location ./temp/eslint-cache",
		"lint:eslint:debug": "cross-env TIMING=1 && eslint .",
		"lint:prettier": "prettier . --write",
		"lint:prettier:debug": "prettier . --write",
		"test": "cross-env NODE_ENV=test jest --clearCache && jest"
	},
	"dependencies": {
		"ms": "^2.1.3"
	},
	"devDependencies": {
		"@babel/cli": "^7.18.10",
		"@babel/plugin-proposal-class-properties": "^7.18.6",
		"@babel/plugin-transform-runtime": "^7.18.10",
		"@babel/preset-env": "^7.18.10",
		"@babel/preset-typescript": "^7.18.6",
		"@types/express": "^4.17.13",
		"@types/fs-extra": "^9.0.13",
		"@types/jest": "^28.1.8",
		"@types/ms": "^0.7.31",
		"@types/node": "^18.7.13",
		"@types/webpack-dev-server": "^4.7.2",
		"@typescript-eslint/eslint-plugin": "^5.35.1",
		"@typescript-eslint/parser": "^5.35.1",
		"babel-cli": "^6.26.0",
		"babel-loader": "^8.2.5",
		"babel-plugin-module-resolver": "^4.1.0",
		"babel-plugin-root-import": "^6.6.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"fs-extra": "^10.1.0",
		"jest": "^29.0.1",
		"nodemon": "^2.0.19",
		"npm-run-all": "^4.1.5",
		"prettier-plugin-packagejson": "^2.2.18",
		"rimraf": "^3.0.2",
		"ts-jest": "^28.0.8",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.1.0",
		"typescript": "^4.8.2",
		"validatorjs": "^3.22.1",
		"webpack": "^5.74.0",
		"webpack-cli": "^4.10.0",
		"webpack-dev-server": "^4.10.0"
	},
	"publishConfig": {
		"@YOUR-USERNAME:registry": "https://npm.pkg.github.com"
	}
}
